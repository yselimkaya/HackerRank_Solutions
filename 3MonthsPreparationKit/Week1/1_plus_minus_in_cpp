void plusMinus(vector<int> arr) {
    int positive = 0;
    int negative = 0;
    int neutral = 0;
    int total = arr.size();
    for(int i = 0; i < total; i++){
        if (arr[i] > 0){
            positive++;
        }
        else if (arr[i] < 0){
            negative++;
        }
        else
            neutral++;        
    }
    
    double positiveRatio, negativeRatio, neutralRatio;
    positiveRatio = static_cast<double>(positive) / total;
    negativeRatio = static_cast<double>(negative) / total;
    neutralRatio = static_cast<double>(neutral) / total;
    cout << positiveRatio << endl;
    cout << negativeRatio << endl;
    cout << neutralRatio << endl;


    
}
